<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>AWPO Admin</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $(".CalanderUI").datepicker({
                dateFormat: "dd-MM-yy",
                changeMonth: true,
                changeYear: true });
        });
    </script>
</head>
<body class="container">
    <div class="bg-white p-2 m-1 shadow">
        <div class="container-fluid">
            <div class="h3 text-center">Welcome to Army Welfare Placement Organisation</div>
            <div class="h3 small float-right card">

                <div class="float-right bg-danger text-white m-2 p-2 card-header">Login Time : @DateTime.Now.ToString("dd-MMM-yyyy hh:mm")</div>
                <br />
                <div class="bg-dark text-white p-2 text-center">
                    Hi @(!string.IsNullOrEmpty(Session["PrName"] as string) ? Session["PrName"].ToString() : "Guest User") | @Html.ActionLink("Logout", "D2cLogOut", "Admin")
                </div>
            </div>
            <div class="float-left align-bottom h5"><a href="/Admin/Dashboard" class="text-white bg-danger p-2 m-1 rounded">Admin Dashboard</a></div>
            <div class="text-center">
                <img src="~/Content/Images/AWPO_Logo.png" class="rounded img-thumbnail img-fluid" />
            </div>

        </div>
        @*<hr />
            <div class="text-center">
                <div class=" btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary active">
                        <a href="/M_ContactMaster/Index" target="_blank" class="text-white">Contact</a>
                    </label>
                    <label class="btn btn-primary">
                        <a href="/T_OfficersVacanciesMaster/Index_officers_Vacancies" target="_blank" class="text-white">Officers Vacancies</a>
                    </label>
                    <label class="btn btn-secondary">
                        <a href="/T_OfficersVacanciesMaster/Index_JCO_OCR" target="_blank" class="text-white">JCO & OCR</a>
                    </label>
                    <label class="btn btn-danger">
                        <a href="/T_OfficersVacanciesMaster/Index_Govt_Comp" target="_blank" class="text-white">Govt & Comp</a>
                    </label>
                    <label class="btn btn-dark">
                        <a href="/M_ExamMater/Index" target="_blank" class="text-white">Exam Pattern</a>
                    </label>
                    <label class="btn btn-danger text-white">
                        <a href="/M_FAQMaster/Index" target="_blank" class="text-white">FAQ</a>
                    </label>
                </div>
            </div>*@
        <hr />
    </div>
    <div class="mb-5 mt-2">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery-ui")
    @RenderSection("scripts", required: false)
</body>
</html>
