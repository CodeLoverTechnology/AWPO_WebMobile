
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row text-center">
        <div class="offset-lg-4 offset-md-3 col-lg-6 col-md-6 col-sm-12 col-xs-12 w-100">
            <form method="post" class="form-inline">
                <div class="card rounded">
                    <div class="card-title bg-primary text-white">
                        <h3 class="p-3">AWPO Sign In</h3>
                    </div>

                    <div class="card-body p-2">
                        <div class="form-group p-2">
                            <label for="username">User ID : &nbsp;&nbsp;&nbsp;&nbsp;</label>
                            <input type="text" id="username" name="username" size="40" class="focus" placeholder="Please Enter User ID" />
                        </div>
                        <div class="form-group p-2">
                            <label for="password">Password : &nbsp;</label>
                            <input type="password" id="password" name="password" size="40" class="focus" placeholder="Please Enter Password." />
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="bg-dark p-3 text-right">
                            <input type="submit" class="btn btn-success" value="Sign In" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    if ('@ViewBag.Message' != undefined && '@ViewBag.Message' != '') {
        alert('@ViewBag.Message');
    }
</script>

